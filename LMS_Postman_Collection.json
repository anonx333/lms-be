          },
          "response": []
        },
        {
          "name": "Get My Borrows",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{borrowEP}}",
              "host": ["{{borrowEP}}"]
            }
          },
          "response": []
        },
        {
          "name": "Return Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{borrowEP}}/:borrowId/return",
              "host": ["{{borrowEP}}"],
              "path": [":borrowId", "return"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Leave a Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\" : \"REVIEW NEW REVIEW\",\n    \"description\" : \"REVIEW 1 Description\",\n    \"rating\" : 1\n}"
            },
            "url": {
              "raw": "{{reviewEP}}/:bookId",
              "host": ["{{reviewEP}}"],
              "path": [":bookId"]
            }
          },
          "response": []
        },
        {
          "name": "My Reviews",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
