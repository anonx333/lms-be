          },
          "response": []
        },
        {
          "name": "Activate Review (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\" : \"active\"\n}"
            },
            "url": {
              "raw": "{{reviewEP}}/:reviewId",
              "host": ["{{reviewEP}}"],
              "path": [":reviewId"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
