{
  "info": {
    "_postman_id": "library-api-collection-2025",
    "name": "Library Management API",
    "description": "Complete Postman collection for your Node.js/MongoDB library app (auth, books, borrows, reviews)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"fName\": \"prem\",\n    \"lName\": \"presfdsm\",\n    \"phone\": \"34567\",\n    \"email\": \"asdf2@sdfc.com\",\n    \"password\": \"sdfdsf\"\n}"
            },
            "url": {
              "raw": "{{authEP}}/register",
              "host": ["{{authEP}}"],
              "path": ["register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\" : \"asdf2@sdfc.com\",\n    \"password\" : \"sdfdsf\"\n}"
            },
            "url": {
              "raw": "{{authEP}}/login",
              "host": ["{{authEP}}"],
              "path": ["login"]
            }
          },
          "response": []
        },
        {
          "name": "Renew JWT",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{authEP}}/renew-jwt",
              "host": ["{{authEP}}"],
              "path": ["renew-jwt"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{authEP}}/users",
              "host": ["{{authEP}}"],
              "path": ["users"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books (Authenticated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{bookEP}}",
              "host": ["{{bookEP}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Public Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{bookEP}}/public",
              "host": ["{{bookEP}}"],
              "path": ["public"]
            }
          },
          "response": []
        },
        {
          "name": "Create New Book (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"BOOK_TITLE\",\n    \"author\": \"AUTHOR\",\n    \"isbn\": \"ISBN2\",\n    \"publishedYear\": 1990,\n    \"thumbnail\": \"THUMBNAIL\",\n    \"description\": \"BOOK_DESCRIPTION\"\n}"
            },
            "url": {
              "raw": "{{bookEP}}",
              "host": ["{{bookEP}}"]
            }
          },
          "response": []
        },
        {
          "name": "Activate Book (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"status\" : \"active\"\n}"
            },
            "url": {
              "raw": "{{bookEP}}/:bookId",
              "host": ["{{bookEP}}"],
              "path": [":bookId"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Borrows",
      "item": [
        {
          "name": "Borrow a Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{borrowEP}}/:bookId",
